<div class="standard-container">
  <div class="headline-container">
    <h1 class="arkham-font-tale"><%= @campaign_names[@campaign.name.to_sym] %></h1>
    <%= link_to "Go back to your campaigns", campaigns_path, class:"no-link-style-black underlined-link" %>
  </div>
  <div class="campaign-info-container">
    <span class="button-frame"><%= @campaign.difficulty %></span>
    <%= link_to "Create a new Investigator", new_campaign_investigator_path(@campaign), class:"new-investigator no-link-style-black underlined-link" %>
  </div>
  <div class="investigator-container">
    <div class="flex-row-container">
      <!-- cards for investigators -->
      <div class="cards-investigator">
        <% @campaign.investigators.each do |investigator| %>
        <div class="card-category">
          <div class="flex-row-container">
            <h4 class="arkham-font-tale"><%= investigator.name %></h4>
            <div>
              <%= link_to  edit_campaign_investigator_path(@campaign, investigator) do %>
                  <i class="fas fa-pencil-alt link-icon"></i>
              <% end %>
              <%= link_to  campaign_investigator_path(@campaign, investigator),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash link-icon"></i>
              <% end %>
            </div>
          </div>
          <p>Player: <%= investigator.player_name %></p>
          <p>Deck Link: <%= investigator.deck_link %></p>
          <br>
          <p>Physical Trauma: <%= investigator.physical_trauma %></p>
          <p>Mental Trauma: <%= investigator.mental_trauma %></p>
          <br>
          <p>Unspent Experience Points: <%= investigator.unspent_experience_points %></p>
        </div>
        <% end %>
      </div>
      <!-- token box -->
      <div class="token-box">
        <p>TOKEN</p>
      </div>
    </div>
    <div class="flex-row-container">
      <!-- campaign log -->
      <div>
        <h3 class="arkham-font-tale">Campaign Log</h3>
      </div>
      <div>
        <h3 class="arkham-font-tale">Scenarios</h3>
        <% @campaign.scenarios.each do |scenario| %>
          <div class="flex-row-container">
            <p><%= scenario.name %> - completed: <%= scenario.completed %></p>
            <%= link_to  edit_campaign_scenario_path(@campaign, scenario) do %>
              <i class="fas fa-pencil-alt link-icon"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
