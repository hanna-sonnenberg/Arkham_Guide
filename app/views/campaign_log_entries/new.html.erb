<div class="standard-container">
  <%= link_to campaign_path(@campaign) do %>
    <div class="back-link-container">
      <i class="fas fa-arrow-circle-left"></i>
      <p class="back-link-text">Back</p>
    </div>
  <% end %>
  <div class="margin-top">
    <%= simple_form_for [@campaign, @campaign_log_entry] do |f| %>
      <%= f.input :content, label: "Entry" %>
      <%= f.submit "Create campaign log entry", class: "button-tale" %>
    <% end %>
  </div>
</div>