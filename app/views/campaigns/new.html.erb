<div class="standard-container">
  <%= link_to campaigns_path do %>
    <i class="fas fa-arrow-circle-left link-icon"></i>
    <span class="back-link-text">Back</span>
  <% end %>
  <div class="margin-top">
    <%= simple_form_for @campaign do |f| %>
      <%= f.input :name, label: "Choose the Campaign", :collection => Campaign.names,
          label_method: :second, value_method: :first %>
      <%= f.input :difficulty, label: "Choose Difficulty", :collection => Campaign.difficulties %>
      <div id="investigators">
        <!-- choose investigator -->
        <%= f.simple_fields_for :investigators do |investigator| %>
          <%= render 'investigator_fields', f: investigator %>
        <% end %>
        <%= link_to_add_association 'add investigator', f, :investigators %>
      </div>
      <%= f.submit "Create campaign", class: "button-tale" %>
    <% end %>
  </div>
</div>
