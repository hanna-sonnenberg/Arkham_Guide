<div id="scenario-<%= scenario.id %>">
  <%= button_to campaign_scenario_path(@campaign, scenario), method: :put,
    params: {:scenario => { :completed => !scenario.completed } }, class:["flex-center-container", "button-no-styling"],
    remote: true do %>
    <% if scenario.completed == true %>
      <i class="completed-icon far fa-check-square"></i>
    <% else %>
      <i class="completed-icon far fa-square"></i>
    <% end %>
    <p style="padding: 0 15px; margin-bottom: 0"><%= scenario.name %></p>
  <% end %>
</div>
