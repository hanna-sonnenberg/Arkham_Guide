<div class="navbar navbar-expand-sm navbar-dark navbar-container">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "text_logo_white.svg" %>
  <% end %>

  <!-- move everything after this to the right -->
  <div style="display: flex; flex-direction: row; flex-grow: 1;"></div>

  <ul class="navbar-nav mr-auto">
    <% if user_signed_in? %>
      <li>
        <%= link_to "new campaign", new_campaign_path, class: "nav-link non-responsive-link" %>
      </li>
      <li>
        <%= link_to new_campaign_path, class: "responsive link-icon" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </li>
    <% else %>
      <%#= link_to "Sign Up", new_user_session_path, class: "nav-link" %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <% end %>
  </ul>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- dropdown on avatar -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="dropdown">
          <%= image_tag "avatar_example", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <li class="responsive">
          <%= link_to "Profile", "#", class: "dropdown-item" %>
        </li>
        <li class="responsive">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
